    "typescript": "~5.5.4"
  },
  "dependencies": {
    "@aws-cdk/aws-lambda-python-alpha": "^2.233.0-alpha.0",
    "aws-cdk-lib": "^2.233.0",
    "constructs": "^10.0.0"
  }
}
